<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical" >

    <LinearLayout
        android:id="@+id/searchbar_back_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_titlebar"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/searchbar_back"
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/icon_arrow_left_white_big" />

        <ImageView
            android:id="@+id/searchbar_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/bg_fillet_gray"
        android:gravity="center_vertical"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/search_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="@drawable/icon_search_gray" />

        <com.raul.basic.android.ui.basic.richeditext.LimitedEditText
            android:id="@+id/search_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/contact_search_hint"
            android:singleLine="true"
            android:textColorHint="@color/hint_input"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="38dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dip"
            android:paddingLeft="0dip"
            android:scaleType="centerInside"
            android:src="@drawable/icon_cancel_selector"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/search_right_icon_separator"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:src="@drawable/line_titlebar"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/search_right_icon"
        android:layout_width="46.7dp"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_titlebar"
        android:scaleType="center"
        android:src="@drawable/icon_search_white"
        android:visibility="gone" />

</LinearLayout>