<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="Animation" />

    <style name="Animation.Translucent" parent="@style/Animation">
        <item name="android:windowEnterAnimation">@anim/translucent_zoom_out</item>
        <item name="android:windowExitAnimation">@anim/translucent_zoom_exit</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 去掉系统状态栏阴影 -->
    <style name="Theme.IOSched" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="friend_section_bar_text" parent="android:Widget.TextView">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 搜索框文本 -->
    <style name="search_text" parent="android:Widget.TextView">
        <item name="android:textColor">#555555</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">9.0dip</item>
    </style>

    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="tab_text" parent="android:Widget.TextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 标题栏字体样式 -->
    <style name="title_bar_title_text" parent="android:Widget.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 字体样式 -->
    <style name="text_white_20" parent="android:Widget.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!-- 标题栏按钮样式 -->
    <style name="title_bar_button_text" parent="android:Widget.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 标题栏按钮样式 -->
    <style name="title_bar_button_text_18" parent="android:Widget.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 标题栏按钮样式 -->
    <style name="title_bar_button_text_16" parent="android:Widget.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/grgray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- 未读消息的样式 -->
    <style name="conversation_unread_text" parent="android:Widget.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="listitem_text_title">
        <item name="android:textColor">@drawable/listitem_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="listitem_text_hint">
        <item name="android:textColor">@drawable/listitem_hint</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Dialog 样式的 Activity -->
    <style name="dialog_activity" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Animation.SlideTop" parent="@style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_up</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="Theme.HalfTranslucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Translucent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.FullTranslucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/full_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Translucent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Animation.ZoomLight" parent="@style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/translucent_zoom_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/translucent_zoom_exit</item>
    </style>

    <style name="Theme.ZoomLight.Fullscreen" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/Animation.ZoomLight</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Dialog message text -->
    <style name="dialog_message_text_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">13.3dip</item>
        <item name="android:paddingLeft">13.3dip</item>
        <item name="android:paddingRight">13.3dip</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">13.3dip</item>
    </style>

    <!-- Dialog title -->
    <style name="dialog_title_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">52dip</item>
        <item name="android:textColor">@color/holo</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">13.3dip</item>
        <item name="android:paddingRight">13.3dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <!-- Dialog list item title -->
    <style name="dialog_list_item_title_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/dialog_list_item_text_selector</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">13.3dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <!-- Dialog list item sub title -->
    <style name="dialog_list_item_sub_title_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">13.3dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|top</item>
    </style>

    <!-- Dialog button -->
    <style name="dialog_button_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">38.7dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_selector</item>
    </style>

    <!-- Dialog checkbox -->
    <style name="dialog_checkbox_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">13.3dip</item>
        <item name="android:layout_marginRight">13.3dip</item>
        <item name="android:paddingLeft">25dip</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!-- 更多背景样式 -->
    <style name="more_mainframe">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">13dip</item>
        <item name="android:paddingRight">13dip</item>
        <item name="android:paddingTop">7dip</item>
        <item name="android:paddingBottom">13dip</item>
    </style>

    <!-- 更多背景样式 -->
    <style name="more_group">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:background">@drawable/commonusewhite</item>
    </style>
    <!-- 更多每个条目样式 -->
    <style name="more_item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <!-- 更多textview样式 -->
    <style name="more_text">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">44.7dip</item>
    </style>
    <!-- 更多分割线样式 -->
    <style name="setting_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/divider</item>
    </style>

    <style name="MyEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">13.0dip</item>
    </style>
    
    <!-- 加载旋转bar -->
    <style name="anim_progressbar_style" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@anim/anim_progressbar</item>
    </style>

</resources>